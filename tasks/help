echo "Usage: instui <command> [<args>]"
echo ""
echo "Commands:"
echo "  install       Installs dependencies"
echo "  build         Builds the library for UMD and CommonJS."
echo "  test          Run the test suite. Use --single-run for single run."
echo "  docs          Builds the documentation."
echo "  server        Starts the dev server."
echo "  bump          Bumps the package version."
echo "  release       Publish a new release to npm."
echo "  pages         Deploys the documentation to gh-pages."
echo "  generate      Generate a new component scaffold."
echo ""
echo "Options:"
echo "  --help      Prints usage and options."
