{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [2, 120, 2],
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-no-bind": [2, {
      "ignoreRefs": true
    }],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true,
      "mode": "minimum"
    }],
    "no-var": 2,
    "prefer-const": 2,
    "no-param-reassign": 2,
    "no-console": 2
  },
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "createTestbed": true
  },
  "extends": ["standard", "standard-react"]
}
